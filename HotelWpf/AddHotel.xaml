<Window x:Class="HotelWpf.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelWpf"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <DockPanel  Grid.Row="0" Background="AntiqueWhite" >
            <TextBlock    VerticalAlignment="Top">NameHotel:</TextBlock>
            <TextBox   VerticalAlignment="Top" Width="100"></TextBox>
            <TextBlock VerticalAlignment="Top">Countri:</TextBlock>
            <ComboBox x:Name="cbContr"   VerticalAlignment="Top" Width="150" IsEditable="True"></ComboBox>
            <TextBlock  VerticalAlignment="Top">City:</TextBlock>
            <TextBox   VerticalAlignment="Top" Width="100"></TextBox>
            <TextBlock   VerticalAlignment="Top">Street:</TextBlock>
            <TextBox   VerticalAlignment="Top" Width="100"></TextBox>

        </DockPanel>
    </Grid>
</Window>
